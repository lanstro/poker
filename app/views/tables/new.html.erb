<% provide(:title, 'Find a game') %>

<html>
	<body>
		<h1>Find a game of Chinese poker!</h1>
		<div class="span4 offset3">
			<%= form_for(:table, url: tables_path) do |f| %>
			
				<%= f.label :stakes, "Stakes: $ per point" %>
				<%= f.select(:stakes, [10, 20, 50, 100, 200]) %>

				<%= f.label :seats, "Seats at table" %>
				<%= f.select(:seats, [2, 4, 6, 8]) %>

				<%= f.label :ais, "AIs fill empty seats?" %>
				<%= f.select(:ais, [true, false]) %>

				<%= f.submit "Find a table", class: "btn btn-large btn-primary" %>
			<% end %>
		</div>
		
	</body>
</html>